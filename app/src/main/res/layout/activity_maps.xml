<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/root_layout">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:titleTextColor="@color/white"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="it.unisa.luca.fuelsort.MapsActivity" >

        <include layout="@layout/map_fragment"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:id="@+id/searchFieldLayout">

                <EditText
                    android:id="@+id/from"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/searchfield_background"
                    android:hint="@string/partenza"
                    android:imeOptions="actionNext"
                    android:inputType="textCapSentences"
                    android:paddingBottom="3dp"
                    android:paddingEnd="10dp"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:paddingStart="10dp"
                    android:paddingTop="3dp"
                    android:text="Torre del grecoasdasdasdasdasdsadasd" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="10dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:paddingLeft="10dp"
                    android:paddingStart="10dp"
                    android:paddingRight="10dp"
                    android:paddingEnd="10dp"
                    android:background="@drawable/searchfield_background"
                    android:id="@+id/to"
                    android:imeOptions="actionDone"
                    android:inputType="textCapSentences"
                    android:hint="@string/destinazione"
                    android:text="Fisciano"
                    android:layout_marginStart="10dp" />
            </LinearLayout>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/startRouteSearch"
                android:src="@drawable/search_ico"
                android:onClick="startRouteSearch"
                android:contentDescription="@string/bottono_per_iniziare_la_ricerca" />
        </LinearLayout>
        <Button
            android:id="@+id/viewStation"
            android:layout_marginBottom="5dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/pomp_icon"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/openOnGoogleMaps"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/viewStation"
            android:layout_toStartOf="@id/viewStation"
            android:text="@string/open_in"
            android:drawableRight="@drawable/google_maps_ico"
            android:drawableEnd="@drawable/google_maps_ico"
            android:drawablePadding="5dp"/>

        <LinearLayout
            android:id="@+id/LoadingLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#d9b638"
            android:orientation="horizontal"
            android:visibility="invisible">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:indeterminate="true"
                style="@android:style/Widget.ProgressBar.Small.Inverse"/>

            <TextView
                android:id="@+id/LoadingTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>